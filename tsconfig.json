{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": ["dom"],
    "outDir": "dist",
    "declaration": true,
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "allowJs": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
  "include": ["lib/**/*"],
  "exclude": ["node_modules"]
}
